# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# Controller for Malefiz

GET     /                           controllers.MalefizController.home

GET     /about                      controllers.MalefizController.about

GET     /controls                   controllers.MalefizController.controls

GET     /htmltest                   controllers.MalefizController.htmltest

GET     /csstest                    controllers.MalefizController.csstest

GET     /zengardendefault           controllers.MalefizController.zengardendefault

GET     /robot                      controllers.MalefizController.robot

GET     /lesstest                   controllers.MalefizController.lesstest

GET     /start                      controllers.MalefizController.start

GET     /addplayer/:playername      controllers.MalefizController.addplayer(playername: String)

GET     /selectfig/:figurenum       controllers.MalefizController.selectFigure(figurenum: Int)

GET     /move/:input                controllers.MalefizController.move(input: String)

GET     /skip                       controllers.MalefizController.skip

GET     /rolldice                   controllers.MalefizController.rollDice

GET     /save                       controllers.MalefizController.saveGame

GET     /load                       controllers.MalefizController.loadGame

GET     /undo                       controllers.MalefizController.undoGame

GET     /redo                       controllers.MalefizController.redoGame

GET     /reset                      controllers.MalefizController.resetGame

GET     /errors/notfound            controllers.ErrorController.notFound

GET     /errors/badrequest          controllers.ErrorController.badRequest

GET     /errors/internalservererror controllers.ErrorController.internalServerError

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)